<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:elevation="10dp"
    card_view:cardCornerRadius="15dp"
    android:layout_margin="8dp"
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/brew_pic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beer_name"
            android:layout_toRightOf="@+id/brew_pic"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:text="Beer: Quilter' Irish Death"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/brewery"
            android:layout_toRightOf="@+id/brew_pic"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_below="@+id/beer_name"
            android:textSize="18sp"
            android:text="Brewery: Iron Horse Brewery"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abv"
            android:layout_toRightOf="@+id/brew_pic"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_below="@+id/brewery"
            android:textSize="14sp"
            android:text="ABV: 8.5         "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibu"
            android:layout_below="@+id/brewery"
            android:layout_toRightOf="@+id/brew_pic"
            android:layout_toEndOf="@+id/abv"
            android:textSize="14sp"
            android:text="IBUs: 45"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>